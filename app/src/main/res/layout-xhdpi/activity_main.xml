<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="5pt"
        android:layout_marginBottom="20pt">

    <EditText
            android:editable="false"
            android:focusable="false"
            android:layout_width="1108dp"
            android:layout_height="350dp"
            android:inputType="textPersonName"
            android:text="0"
            android:ems="10"
            android:id="@+id/valueS" android:layout_weight="1"
            android:paddingTop="5pt" android:background="@color/upper" android:textSize="40sp"
            android:textStyle="normal|bold" android:textDirection="rtl" android:visibility="visible"
    />
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1pt"
        >

            <Button
                    android:layout_marginRight="1pt"
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/ba" android:background="@color/BUTTON"
                    android:layout_weight="1" android:textSize="18sp" android:onClick="bAC"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/bPM" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/per" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="pers"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="/"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/d" android:background="@color/N"
                    android:layout_weight="1"
                    android:textSize="18sp" android:textColor="@color/white" android:onClick="OB"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1pt">
            <Button
                    android:layout_marginRight="1pt"
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/b7" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/b8" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/b9" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="X"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/m" android:background="@color/N"
                    android:layout_weight="1"
                    android:textSize="18sp" android:textColor="@color/white" android:onClick="OB"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:layout_marginBottom="1pt">
            <Button
                    android:layout_marginRight="1pt"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="40pt" android:id="@+id/b4" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/b5" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/b6" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="40pt" android:id="@+id/s" android:background="@color/N"
                    android:layout_weight="1"
                    android:textSize="18sp" android:textColor="@color/white" android:onClick="OB"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1pt">
            <Button
                    android:text="1"
                    android:layout_marginRight="1pt"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/b1" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="2"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/b2" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="3"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/b3" android:background="@color/BUTTON"
                    android:layout_weight="1"
                    android:textSize="18sp" android:onClick="bnevent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:text="+"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/p" android:background="@color/N"
                    android:layout_weight="1"
                    android:textSize="18sp" android:textColor="@color/white" android:onClick="OB"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginRight="1pt"
                android:text="0"
                android:layout_width="498dp"
                android:layout_height="40pt" android:id="@+id/b0" android:layout_weight="0"
                android:background="@color/BUTTON"
                android:textSize="18sp" android:onClick="bnevent"/>
        <Button
                android:layout_marginRight="1pt"
                android:text="."
                android:layout_width="105dp"
                android:layout_height="40pt" android:id="@+id/bd" android:layout_weight="1"
                android:background="@color/BUTTON"
                android:textSize="18sp" android:onClick="bnevent"/>
        <Button
                android:layout_marginRight="1pt"
                android:text="="
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button22" android:layout_weight="1"
                android:background="@color/N"
                android:textSize="18sp" android:textColor="@color/white" android:onClick="bE"/>
    </LinearLayout>
</LinearLayout>